<idea-plugin require-restart="true">
    <id>com.ziondev.highlightmenow</id>
    <name>Highlight Me Now</name>
    <vendor>Zion Dev</vendor>

    <description>Plugin to highlight lines based on text patterns.</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <resource-bundle>messages.HighlightMeNowBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.ziondev.highlightmenow.settings.HighlightSettingsState"/>
        <applicationConfigurable instance="com.ziondev.highlightmenow.settings.HighlightSettingsConfigurable"
                                 id="com.ziondev.highlightmenow.settings.HighlightSettingsConfigurable"
                                 key="settings.display.name"/>
        <editorFactoryListener implementation="com.ziondev.highlightmenow.highlight.HighlightEditorListener"/>
    </extensions>
</idea-plugin>
